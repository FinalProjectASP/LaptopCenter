@model IEnumerable<LaptopCenter.DTO.ProductsDTO>

@{
    ViewData["Title"] = "Index";
}

<div class="container slide ">
    <h1 class="mt-5">Index</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProductId)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                    <th>@Html.DisplayNameFor(model => model.ShortDescription)</th>
                    <th>@Html.DisplayNameFor(model => model.DetailDescription)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductImage)</th>
                    <th>@Html.DisplayNameFor(model => model.IsSale)</th>
                    <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.CPU)</th>
                    <th>@Html.DisplayNameFor(model => model.RAM)</th>
                    <th>@Html.DisplayNameFor(model => model.GraphicsCard)</th>
                    <th>@Html.DisplayNameFor(model => model.ScreenSize)</th>
                    <th>@Html.DisplayNameFor(model => model.WarrantyPeriod)</th>
                    <th>@Html.DisplayNameFor(model => model.CreateAt)</th>
                    <th>@Html.DisplayNameFor(model => model.Category.CategoryName)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ProductId)</td>
                        <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                        <td>@Html.DisplayFor(modelItem => item.ShortDescription)</td>
                        <td>@Html.DisplayFor(modelItem => item.DetailDescription)</td>
                        <td>@Html.DisplayFor(modelItem => item.ProductImage)</td>
                        <td>@Html.DisplayFor(modelItem => item.IsSale)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.CPU)</td>
                        <td>@Html.DisplayFor(modelItem => item.RAM)</td>
                        <td>@Html.DisplayFor(modelItem => item.GraphicsCard)</td>
                        <td>@Html.DisplayFor(modelItem => item.ScreenSize)</td>
                        <td>@Html.DisplayFor(modelItem => item.WarrantyPeriod)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreateAt)</td>
                        <td>@Html.DisplayFor(modelItem => item.Supplier.SupplierName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

