@model LaptopCenter.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="text-center text-danger mt-5">Delete Product</h1>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="alert alert-warning">
                <h3 class="text-center">Are you sure you want to delete this?</h3>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4>Product Details</h4>
                </div>
                
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.ProductName)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.ShortDescription)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.ShortDescription)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.DetailDescription)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DetailDescription)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Image)
                        </dt>
                        <dd class="col-sm-9">
                            <img src="~/img/products/@Model.Image" style="width: 100px" class="rounded img-thumbnail" alt="...">
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.IsSale)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.IsSale)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Quantity)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.CPU)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.CPU)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.RAM)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.RAM)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.GraphicsCard)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.GraphicsCard)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.ScreenSize)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.ScreenSize)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.WarrantyPeriod)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.WarrantyPeriod)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.CreateAt)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.CreateAt)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Supplier)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Supplier.SupplierName)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Category)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Category.CategoryName)
                        </dd>
                    </dl>
                    <div class="mt-4 text-center">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="ProductId" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
