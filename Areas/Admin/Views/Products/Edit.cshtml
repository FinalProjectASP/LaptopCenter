@model LaptopCenter.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div>
    <h1 class="text-center">Edit Product</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Edit" class="needs-validation" novalidate enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductId" />

                <!-- ProductName -->
                <div class="form-floating mb-3">
                    <input asp-for="ProductName" class="form-control" placeholder="Product Name" />
                    <label asp-for="ProductName"></label>
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <!-- ShortDescription -->
                <div class="form-floating mb-3">
                    <input asp-for="ShortDescription" class="form-control" placeholder="Short Description" />
                    <label asp-for="ShortDescription"></label>
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>

                <!-- DetailDescription -->
                <div class="form-floating mb-3">
                    <textarea asp-for="DetailDescription" class="form-control" style="height: 100px" placeholder="Detail Description"></textarea>
                    <label asp-for="DetailDescription"></label>
                    <span asp-validation-for="DetailDescription" class="text-danger"></span>
                </div>

                <!-- IsSale -->
                <div class="form-check mb-3">
                    <input asp-for="IsSale" class="form-check-input" />
                    <label asp-for="IsSale" class="form-check-label"></label>
                </div>

                <div class="row g-2 mb-3">
                    <!-- Quantity -->
                    <div class="col-6">
                        <div class="form-floating">
                            <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
                            <label asp-for="Quantity"></label>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <!-- Price -->
                        <div class="form-floating">
                            <input asp-for="Price" class="form-control" placeholder="Price" />
                            <label asp-for="Price"></label>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-6">
                        <!-- CPU -->
                        <div class="form-floating">
                            <input asp-for="CPU" class="form-control" placeholder="CPU" />
                            <label asp-for="CPU"></label>
                            <span asp-validation-for="CPU" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <!-- RAM -->
                        <div class="form-floating">
                            <input asp-for="RAM" class="form-control" placeholder="RAM" />
                            <label asp-for="RAM"></label>
                            <span asp-validation-for="RAM" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-6">
                        <!-- GraphicsCard -->
                        <div class="form-floating">
                            <input asp-for="GraphicsCard" class="form-control" placeholder="Graphics Card" />
                            <label asp-for="GraphicsCard"></label>
                            <span asp-validation-for="GraphicsCard" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-6">
                        <!-- ScreenSize -->
                        <div class="form-floating">
                            <input asp-for="ScreenSize" class="form-control" placeholder="Sreen size" />
                            <label asp-for="ScreenSize"></label>
                            <span asp-validation-for="ScreenSize" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- WarrantyPeriod -->
                <div class="form-floating mb-3">
                    <input asp-for="WarrantyPeriod" class="form-control" placeholder="Warranty Period" />
                    <label asp-for="WarrantyPeriod"></label>
                    <span asp-validation-for="WarrantyPeriod" class="text-danger"></span>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-6">
                        <!-- SupplierId -->
                        <div class="form-floating">
                            <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.Suppliers"></select>
                            <label asp-for="SupplierId"></label>
                        </div>
                    </div>

                    <div class="col-6">
                        <!-- CategoryId -->
                        <div class="form-floating">
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
                            <label asp-for="CategoryId"></label>
                        </div>
                    </div>
                </div>
                
                <input type="hidden" asp-for="Image" />

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label"></label>
                    <input asp-for="ImageFile" class="form-control" type="file">
                </div>

                <div class="mb-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
