@model LaptopCenter.Models.Supplier

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Delete Supplier</h1>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="alert alert-warning">
                <h3 class="text-center">Are you sure you want to delete this?</h3>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4>Supplier Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.SupplierName)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.SupplierName)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.LogoUrl)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.LogoUrl)
                        </dd>

                        <div class="mt-4 text-center">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="SupplierId" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                            </form>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
