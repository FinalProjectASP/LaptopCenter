@model LaptopCenter.Models.Supplier

@{
    ViewData["Title"] = "Suppliers";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Suppliers</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
    </p>

    <div class="container mt-4">
        <h1 class="text-center">Create Supplier</h1>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Create" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-group mb-3">
                        <label asp-for="SupplierName" class="form-label"></label>
                        <input asp-for="SupplierName" class="form-control" />
                        <span asp-validation-for="SupplierName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LogoUrl" class="form-label"></label>
                        <input asp-for="LogoUrl" type="file" class="form-control" />
                        <span asp-validation-for="LogoUrl" class="text-danger"></span>
                    </div>

                    <div class=" mb-3">
                        <input type="submit" value="Create" class="btn_submit btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
