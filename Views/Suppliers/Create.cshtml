@model IEnumerable<LaptopCenter.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Suppliers</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SupplierName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LogoUrl)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupplierName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LogoUrl)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.SupplierId" class="btn btn-sm btn-warning">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.SupplierId" class="btn btn-sm btn-info">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.SupplierId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
