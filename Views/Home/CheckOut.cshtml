@{
}
<div class="cart_section row justify-content-center mb-md-0 mb-5">
    <div class="col-xl-10 checkout">
        <div class="card shadow-lg">
            <div class="row mx-auto justify-content-center text-center">
                <div class="col-12 mt-3">
                    <nav aria-label="breadcrumb" class="second">
                        <ol class="breadcrumb indigo lighten-6 background-white">
                            <li class="breadcrumb-item font-weight-bold">
                                <a asp-controller="Home" asp-action="Product" class="black-text text-uppercase">
                                    <span class="mr-md-3 mr-1">BACK TO SHOP</span>
                                </a>
                                <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                            </li>
                            <li class="breadcrumb-item font-weight-bold">
                                <a asp-controller="Home" asp-action="Cart" class="black-text text-uppercase">
                                    <span class="mr-md-3 mr-1">SHOPPING BAG</span>
                                </a>
                                <i class="fa fa-angle-double-right text-uppercase" aria-hidden="true"></i>
                            </li>
                            <li class="breadcrumb-item font-weight-bold">
                                <a asp-controller="Home" asp-action="CheckOut" class="black-text text-uppercase active-link">
                                    <span class="mr-md-3 mr-1">CHECKOUT</span>
                                </a>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="row justify-content-around row-checkout">
                <div class="col-12 col-md-6">
                    <div class="card border-0">
                        <div class="card-header card-margin-top">
                            <p class="card-text text-muted mt-md-4 mb-2 letter-spacing">YOUR ORDER <span class="small-text text-muted ml-2 cursor-pointer">EDIT SHOPPING BAG</span> </p>
                            <hr class="my-2">
                        </div>
                        <div class="card-body pt-0 pe-4">
                            <div class="cart_items" style="height: 190px;">
                                <ul class="cart_list me-0">
                                    <li class="cart_item clearfix">
                                        <div class="cart_item_image">
                                            <img src="https://i.imgur.com/qqBRWD5.jpg" alt="">
                                        </div>
                                        <div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
                                            <div class="cart_item_name cart_info_col">
                                                <div class="cart_item_title">
                                                    Name
                                                </div>
                                                <div class="cart_item_text cart_name">
                                                    Samsung
                                                    C7 Pro
                                                </div>
                                            </div>
                                            <div class="cart_item_color cart_info_col">
                                                <div class="cart_item_title cart-color">
                                                    Color
                                                </div>
                                                <div class="cart_item_text">
                                                    <span style="background-color:#999999;"></span>Silver
                                                </div>
                                            </div>
                                            <div class="cart_item_price cart_info_col">
                                                <div class="cart_item_title">
                                                    Price
                                                </div>
                                                <div class="cart_item_text cart_price">
                                                    $22.00
                                                </div>
                                            </div>
                                            <div class="cart_item_quantity cart_info_col ps-4">
                                                <div class="cart_item_title" id="cart_item_title">
                                                    Quantity
                                                </div>
                                                <div class="d-flex flex-row align-self-center product_data" id="qty_select" style="width: 100px;">
                                                    <input type="hidden" value=" 1 " class="prod_id">
                                                    <div class="input-group text-center" id="qty_selector">
                                                        <a class="decrement-btn">
                                                            <i class="fa fa-minus" style="padding-left:9px"></i>
                                                        </a>
                                                        <input type="text" readonly="readonly" id="qty_display" class="qty-input text-center" value="1" />
                                                        <a class="increment-btn">
                                                            <i class="fa fa-plus"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <div class="order_total checkout_page">
                                <div class="order_total_content text-md-right">
                                    <div class="order_total_title">
                                        Order
                                        Total:
                                    </div>
                                    <div class="order_total_amount">$22.00</div>
                                </div>
                            </div>
                            <div class="cart_buttons checkout_page pb-3">
                                <a asp-action="Cart" asp-controller="Home"
                                   class="button cart_button_checkout">Payment</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-4 p-0 pb-5">
                    <div class="card border-none shadow-none">
                        <div class="card-header pb-0">
                            <h2 class="card-title letter-spacing">Checkout</h2>
                            <p class="card-text text-muted mt-4 letter-spacing">SHIPPING DETAILS</p>
                            <hr class="my-0">
                        </div>
                        <div class="card-body">
                            <div class="row mt-4">
                                <div class="col">
                                    <p class="text-muted mb-2">Customer Name</p>
                                    <hr class="mt-0">
                                </div>
                                <div class="col">
                                    <p class="text-muted mb-2">Telephone</p>
                                    <hr class="mt-0">
                                </div>
                                <div class="col">
                                    <p class="text-muted mb-2">Address</p>
                                    <hr class="mt-0">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="card-name" class="small-text text-muted mb-1">NOTE</label>
                                <input type="text" class="form-control form-control-sm" name="card-name" id="card-name" aria-describedby="helpId" placeholder="BBBootstrap Team">
                            </div>
                            <div class="form-group">
                                <label for="card-number" class="small-text text-muted mb-1">CARD NUMBER</label>
                                <input type="text" class="form-control form-control-sm" name="card-number" id="card-number" aria-describedby="helpId" placeholder="4534 5555 5555 5555">
                            </div>
                            <div class="row no-gutters">
                                <div class="col-sm-6 pr-sm-2">
                                    <div class="form-group">
                                        <label for="valid-through" class="small-text text-muted mb-1">VALID THROUGH</label>
                                        <input type="text" class="form-control form-control-sm" name="valid-through" id="valid-through" aria-describedby="helpId" placeholder="06/21">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="cvc-code" class="small-text text-muted mb-1">CVC CODE</label>
                                        <input type="text" class="form-control form-control-sm" name="cvc-code" id="cvc-code" aria-describedby="helpId" placeholder="183">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mobile_checkout row ps-1 d-md-none d-block">
					<div class="order_total border-0 col-12">
                        <div class="order_total_title text-danger">
                            Order
                            Total:
                        </div>
                        <div class="order_total_amount">$22.00</div>
                    </div>
                    <div class="cart_buttons col-12 ps-0 border">
                        <a asp-action="Cart" asp-controller="Home"
                           class="button cart_button_checkout">Payment</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>