                        <div class="tab-pane fade" id="pills-privacy" role="tabpanel" aria-labelledby="pills-privacy-tab" tabindex="0">...</div>
                        <div class="tab-pane fade" id="pills-orders-items" role="tabpanel" aria-labelledby="pills-orders-items-tab" tabindex="0">...</div>
                        <div class="tab-pane fade" id="pills-purchase-history" role="tabpanel" aria-labelledby="pills-purchase-history-tab" tabindex="0">...</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function toggleInfo(orderId) {
        var infoElement = document.getElementById('show-' + orderId);
        var btn = document.getElementById('btn-' + orderId);

        if (infoElement.style.display === "none") {
            infoElement.style.display = "block";
            btn.textContent = "See less";
        } else {
            infoElement.style.display = "none";
            btn.textContent = "See more";
        }
    }
</script>
